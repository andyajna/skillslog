<%= simple_form_for([@domain, @skill, @user_history]) do |f| %>
  <%= f.error_notification %>

  <p><b>Domain:</b> <%= @domain.name %></p>
  <p><b>Skill:</b> <%= @skill.name %></p>
  <p>&nbsp;</p>

  <div class="form-inputs">
    <%= f.input :date_observed, :as => :date, :include_blank => true %>
    <%= f.input :date_done, :as => :date, :include_blank => true %>
    <%= f.input :date_taught, :as => :date, :include_blank => true %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :domain_id, :value => @domain.id %>
    <%= f.hidden_field :skill_id, :value => @skill.id %>
    <%= f.button :submit, 'Save Dates' %>
  </div>
<% end %>
