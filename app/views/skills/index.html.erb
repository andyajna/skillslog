<h1>Listing skills</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Standard</th>
    <th>Observed</th>
    <th>Performed</th>
    <th>Taught</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @skills.each do |skill| %>
  <tr>
    <td><%= skill.name %></td>
    <td><%= skill.standard %></td>
    <td><%= skill.observed %></td>
    <td><%= skill.performed %></td>
    <td><%= skill.taught %></td>
    <td><%= link_to 'Show', domain_skill_path(@domain, skill) %></td>
    <td><%= link_to 'Edit', edit_domain_skill_path(@domain, skill) %></td>
    <td><%= link_to 'Destroy', domain_skill_path(@domain, skill), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Skill', new_domain_skill_path(@domain) %>
